
server {
    listen ${API_PORT};

    location / {
        root /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
        client_max_body_size 1000M;
    }

    location /api {
        include uwsgi_params;
        uwsgi_pass ${API_HOST}:${API_PORT};
        client_max_body_size 1000M;
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300; 
    }
}
